// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model WeldingRobot {
    id                        Int      @id @default(autoincrement())
    errorRate                 Float
    vibrationLevel            Float
    electrodeWear             Float
    shieldingPressure         Float
    wireFeedRate              Float
    arcStability              Float
    seamWidth                 Float
    coolingEfficiency         Float
    dateCreated               DateTime @default(now())
}

model PaintingStation {
    id                     Int      @id @default(autoincrement())
    flowRate          Float
    pressure          Float
    colorConsistency  Float
    nozzleCondition   Float
    dateCreated            DateTime @default(now())
}

model AssemblyLine {
    id                        Int      @id @default(autoincrement())
    alignmentAccuracy         Float
    speed                     Float
    fittingTolerance          Float
    beltSpeed                 Float
    dateCreated               DateTime @default(now())
}

model QualityControlStation {
    id                        Int      @id @default(autoincrement())
    cameraCalibration         Float
    lightIntensity            Float
    softwareVersion           Float
    criteriaSettings          Float
    dateCreated               DateTime @default(now())
}
