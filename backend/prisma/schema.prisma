// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model WeldingRobot {
    id                        Int      @id @default(autoincrement())
    weldingRobotErrorRate     Float
    weldingArmVibrationLevel  Float
    electrodeWear             Float
    gasShieldingPressure      Float
    weldingWireFeedRate       Float
    arcStability              Float
    weldSeamWidth             Float
    coolingSystemEfficiency   Float
    dateCreated               DateTime @default(now())
}

model PaintingStation {
    id                     Int      @id @default(autoincrement())
    paintFlowRate          Float
    paintPressure          Float
    paintColorConsistency  Float
    paintNozzleCondition   Float
    dateCreated            DateTime @default(now())
}

model AssemblyLine {
    id                        Int      @id @default(autoincrement())
    partAlignmentAccuracy     Float
    assemblyLineSpeed         Float
    componentFittingTolerance Float
    conveyorBeltSpeed         Float
    dateCreated               DateTime @default(now())
}

model QualityControlStation {
    id                        Int      @id @default(autoincrement())
    inspectionCameraCalibration Float
    inspectionLightIntensity   Float
    inspectionSoftwareVersion  Float
    inspectionCriteriaSettings Float
    dateCreated                DateTime @default(now())
}
